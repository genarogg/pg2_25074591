{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "@fn": [
        "functions/index.ts"
      ],
      "@email/*": [
        "email/*"
      ],
      "@controller/*": [
        "controllers/*"
      ],
      "@router": [
        "routers/index.ts"
      ],
      "@graphql/*": [
        "graphql/*"
      ],
      "@config/*":[
        "config/*"
      ]
    }
  },
  "include": [
    "*.ts",
    "**/**/*.ts",
    "**/**/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}